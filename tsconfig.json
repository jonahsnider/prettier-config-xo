{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "tsc_output",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2018"
	},
	"exclude": ["node_modules", "nyc_output", "coverage"],
	"include": ["src"]
}
